generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int     @id @default(autoincrement())
  email     String  @unique
  password  String
  role      String  @default("user")
  createdAt DateTime @default(now())
}

model Transaction {
  id          Int      @id @default(autoincrement())
  userId      Int
  amount      Float
  merchant    String
  timestamp   DateTime
  createdAt   DateTime @default(now())

  @@index([userId])
}
